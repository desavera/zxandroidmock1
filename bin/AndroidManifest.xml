<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zirix.zxandroidmock"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LinhaListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinhaDetailActivity"
            android:label="@string/title_linha_detail"
            android:parentActivityName=".LinhaListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zirix.zxandroidmock.LinhaListActivity" />
        </activity>
    </application>

</manifest>
